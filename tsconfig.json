{
    "compilerOptions": {
        "target": "ES2021",
        "module": "ESNext",
        "rootDir": "src",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "declaration": true,
        "sourceMap": true,
        "outDir": "dist",
        "declarationDir": "dist/types",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
